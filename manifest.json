{
    "manifest_version": 3,
    "name": "Editor",
    "version": "1.0",
    "description": "文字校正排版",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "activeTab", 
        "storage", 
        "declarativeContent",
        "scripting"
    ],
    "options_page": "options.html",
    "action": {
        "default_icon": "icon.png"
    }
}
